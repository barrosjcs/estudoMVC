@model System.Collections.Generic.IEnumerable<string>

@Html.ActionLink("Todos os produtos", "ListaProdutos", "Vitrine", null, new { @class = "btn btn-block btn-default btn-lg active"})

@foreach(var link in Model)
{
    @Html.RouteLink(link,
    new { controller = "Vitrine", action = "ListaProdutos", categoria = link, pagina = 1 },
    new { @class = "btn btn-block btn-default btn-lg active" + (link == ViewBag.CategoriaSelecionada ? " btn-primary" : "")
    });
}
